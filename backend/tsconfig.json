{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "strict": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "rootDir": "src",
    "outDir": "dist",
    "removeComments": true,
    "forceConsistentCasingInFileNames": true,
    "noEmitOnError": true
  },
  "ts-node": {
    "esm": true
  }
}
